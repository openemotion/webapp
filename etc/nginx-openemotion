# /etc/nginx/sites-available/openemotion

upstream webapp {
    server unix:/home/openemotion/webapp/var/gunicorn.sock fail_timeout=0;
}

server {
    listen 80;
    server_name _;
}

server {
    listen 80;

    server_name alpha.openemotion.org;

    location /static/ {
        alias /home/openemotion/webapp/static/;
    }

    location / {
        auth_basic         "openemotion";
        auth_basic_user_file  htpasswd;

        proxy_pass         http://webapp;
        proxy_redirect     off;
        proxy_buffering    off;    # Allow streaming

        proxy_set_header   Host             $host:$server_port;
        proxy_set_header   X-Real-IP        $remote_addr;
        proxy_set_header   X-Forwarded-For  $proxy_add_x_forwarded_for;
    }
}
